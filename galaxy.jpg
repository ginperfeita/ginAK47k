/* Estilo da Navegação */
.navbar {
    background-color: rgba(0, 0, 0, 0.7);
    padding: 15px 0;
    text-align: center;
    border-bottom: 2px solid #00ffff;
}

.navbar a {
    color: #f0f0f0;
    text-decoration: none;
    margin: 0 20px;
    font-weight: bold;
    transition: color 0.3s;
}

.navbar a:hover {
    color: #00ffff;
}

/* Fundo de Galáxia */
.galaxy-background {
    background-image: url('https://images.unsplash.com/photo-1535223289827-42f1e99197ab?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); /* Use o caminho da sua imagem */
    background-size: cover;
    background-attachment: fixed; /* Fundo fixo para um efeito legal */
    background-position: center;
    min-height: 100vh;
}

/* Estilo do Conteúdo Principal */
.content-wrapper {
    padding: 40px;
    max-width: 900px;
    margin: 40px auto;
    background-color: rgba(0, 0, 0, 0.85);
    border-radius: 10px;
    box-shadow: 0 0 30px rgba(0, 255, 255, 0.3);
}

.intro-section h2, .guarantee-section h3 {
    color: #00ffff;
    border-bottom: 2px solid #00ffff;
    padding-bottom: 10px;
    margin-top: 30px;
}

.intro-section ul {
    list-style: disc;
    margin-left: 20px;
}